<%= form_with(model: contest, local: true) do |form| %>
  <% if contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
      <% contest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- /.row -->
  <div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Basic Form Elements
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label>Title</label>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter title", :required => true %>       
            </div>
            <div class="form-group">
              <label>Entry fee</label>
              <%= form.text_field :entry_fee, class: "form-control", placeholder: "Enter entry fee", :required => true %>
            </div>
            <div class="form-group">
              <label>Etype</label>
              <%= form.text_field :etype, class: "form-control", placeholder: "Enter etype", :required => true %>
            </div>
            <div class="form-group">
              <label>Total spot</label>
              <%= form.text_field :total_spot, class: "form-control", placeholder: "Enter total spot", :required => true %>
            </div>
            <div class="form-group">
              <label>Description</label>
              <%= form.text_field :description, class: "form-control", placeholder: "Enter description", :required => true %>
            </div>
            <div class="form-group">
              <label>EntryAllowed</label>
              <%= form.select :entry_allowed, options_for_select([['Single', 'Single'], ['Multiple', 'Multiple']], selected: form.object.entry_allowed),{}, {class: 'form-control'} %>
            </div>            
            <div class="form-group">
              <label>Status</label>
              <%= form.select :status, options_for_select([['Active', true], ['Pause', false]], selected: form.object.status),{}, {class: 'form-control'} %>
            </div>

            <button type="submit" class="btn btn-primary">Submit Record</button>
            <button type="reset" class="btn btn-default">Reset Form</button>
          </div>

          <!-- /.col-lg-6 (nested) -->
          <div class="col-lg-6">           
          <div class="form-group">
              <label>Contest category</label>
              <%= form.select(:contest_category_id, contest_category_for_collection, {include_blank: "Select Category"}, {:class => 'form-control'}) %>
            </div>           
            <div class="form-group">
              <label>Winning prize</label>
              <%= form.text_field :winning_prize, class: "form-control", placeholder: "Enter winning prize", :required => true %>
            </div>
            <div class="form-group">
              <label>First prize</label>
              <%= form.text_field :first_prize, class: "form-control", placeholder: "Enter first prize", :required => true %>
            </div>
            <div class="form-group">
              <label>Winning percentage</label>
              <%= form.text_field :winning_percentage, class: "form-control", placeholder: "Enter winning percentage", :required => true %>
            </div>
            <div class="form-group">
              <label>Commission</label>
              <%= form.text_field :commission, class: "form-control", placeholder: "Enter commission", :required => true %>
            </div>
            <div class="form-group">
              <label>Discount</label>
              <%= form.text_field :discount, class: "form-control", placeholder: "Enter discount", :required => true %>
            </div>
            <div class="form-group">
              <label>Bonus</label>
              <%= form.text_field :bonus, class: "form-control", placeholder: "Enter Bonus", :required => true %>
            </div>                  
          </div>
          <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<% end %>