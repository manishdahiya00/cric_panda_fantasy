<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <p id="notice" style="color:orange;"><%= notice %></p>
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Showing Contest Details</h2>        
        <b><%= link_to 'Edit', edit_contest_path(@contest) %> |
        <%= link_to 'Back', contests_path %></b>        
      </div>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Title</th>
            <th>EntryFee</th>
            <th>Etype</th>
            <th>ContestCategory</th>
            <th>Description</th>
            <th>EntryAllowed</th>            
          </tr>
        </thead>
        <tbody>          
          <tr>
            <td><%= @contest.id %></td>
            <td><%= @contest.try(:title) %></td>
            <td><%= @contest.try(:entry_fee) %></td>
            <td><%= @contest.try(:etype) %></td>
            <td><%= @contest.contest_category.title %></td>
            <td><%= @contest.try(:description) %></td>
            <td><%= @contest.try(:entry_allowed) %></td>           
          </tr>          
        </tbody>
      </table>
      <table class="table table-responsive table-bordered">
        <thead>
          <tr>
            <th>TotalSpot</th>
            <th>WinningPrize</th>
            <th>FirstPrize</th>
            <th>Winning%</th>
            <th>Commission</th>
            <th>Discount</th>
            <th>Bonus</th>
            <th>Status</th>            
          </tr>
        </thead>
        <tbody>          
          <tr>
            <td><%= @contest.try(:total_spot) %></td>
            <td><%= @contest.try(:winning_prize) %></td>
            <td><%= @contest.try(:first_prize) %></td>
            <td><%= @contest.try(:winning_percentage) %></td>            
            <td><%= @contest.try(:commission) %></td>
            <td><%= @contest.try(:discount) %></td>
            <td><%= @contest.try(:bonus) %></td>
            <td><%= @contest.try(:status) %></td> 
          </tr>          
        </tbody>
      </table>
    </div>
  </div>
</div>
